<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SellMyCar5"
    android:background="@color/colorPrimaryDark"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell My Car 5-5"
            android:fontFamily="@font/lecenddeca_regular"
            android:textSize="30dp"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                android:paddingLeft="20dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Photo"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/bt_Mainimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Photo"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <ImageView

            android:id="@+id/iv_mainimage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_picture"
                android:paddingLeft="20dp"
                android:layout_gravity="center"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Photo"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/bt_SecondaryImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Photo"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:layout_marginRight="20dp"/>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose at least 2 photos one of them for the car interior (one at a time)"
            android:fontFamily="@font/lecenddeca_regular"
            android:textColor="#FFFF"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="30dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rv_pictures"

            />



        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_upload"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"



            />


        <TextView
            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:fontFamily="@font/lecenddeca_regular"
            android:textAlignment="viewEnd"
            android:paddingRight="30dp"
            android:layout_marginBottom="40dp"

            />

    </LinearLayout>



    </ScrollView>






</androidx.drawerlayout.widget.DrawerLayout>
