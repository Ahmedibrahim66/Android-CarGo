<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SellMyCar4"
    android:background="@color/colorPrimaryDark"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sell My Car 4-5"
            android:fontFamily="@font/lecenddeca_regular"
            android:textSize="30dp"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="30dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_price_tag"
                android:paddingLeft="20dp"
                android:layout_gravity="center"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:hint="200000"
                android:textSize="20dp"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:inputType="number"



                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIS"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_organize"
                android:paddingLeft="20dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listed For"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                >
            <CheckBox
                android:id="@+id/cb_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="للبيع فقط"
                android:textSize="18sp"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                android:checked="true"
                android:theme="@style/My1Checkbox"




                />

                <CheckBox
                    android:id="@+id/cb_badal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تبديل "
                    android:textSize="18sp"
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFF"
                    android:theme="@style/My1Checkbox"

                    />



            </LinearLayout>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_payment_method"
                android:paddingLeft="20dp"
                android:layout_gravity="center"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:fontFamily="@font/lecenddeca_regular"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="40dp"
                >
                <CheckBox
                    android:id="@+id/cb_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textSize="18sp"
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFF"
                    android:checked="true"
                    android:theme="@style/My1Checkbox"

                    />

                <CheckBox
                    android:id="@+id/cb_takseet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تقسيط"
                    android:textSize="18sp"
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFF"
                    android:theme="@style/My1Checkbox"

                    />



            </LinearLayout>





        </LinearLayout>




        <TextView
            android:id="@+id/next1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:fontFamily="@font/lecenddeca_regular"
            android:textAlignment="viewEnd"
            android:paddingRight="30dp"
            />

    </LinearLayout>







</androidx.drawerlayout.widget.DrawerLayout>
